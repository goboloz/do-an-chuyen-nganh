
@{
    Layout = null;
}

<form action="themNV" method="post">
    <div class="form-horizontal">
        <h2>Thêm nhân viên</h2>
        <div class="form-group">
            @*name trùng với tên field được binding*@
            <b>Mã nhân viên</b><br />
            <input name="manv" type="text" value="" maxlength="10" /><br /><br />
        </div>
        <div class="form-group">
            <b>Tên nhân viên</b><br />
            <input name="tennv" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <b>Ngày sinh</b><br />
            <input name="ngaysinh" type="datetime-local" /><br /><br />
        </div>
        <div class="form-group">
            <b>Phái</b><br />
            <input name="phai" type="radio" value="true" />Nam
            <input name="phai" type="radio" value="false" />Nữ
        </div>
        <div class="form-group">
            <b>Địa chỉ</b><br />
            <input name="diachi" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <b>Password</b><br />
            <input name="password" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" /><br /><br />
        </div>
        <div>
            <a href="@Url.Action("IndexNSX")">Quay lại</a>
        </div>
    </div>
</form>
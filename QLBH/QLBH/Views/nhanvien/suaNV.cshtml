@using QLBH.Models;
@{
    Layout = null;
}
<form action="suaNV" method="post">
    <div class="form-horizontal">
        <h2>Sửa thông tin nhân viên</h2>
        @{
            nhanvien n = ViewBag.nv;
        }
        <div class="form-group">
            @*name trùng với tên field được binding*@
            <input name="manv" type="hidden" value="@n.manv" maxlength="50" /><br />
        </div>
        <div class="form-group">
            <b>Tên nhân viên</b><br />
            <input name="tennv" type="text" value="@n.tennv" maxlength="50" /><br />
        </div>
        <br />
        <div class="form-group">
            <b>ngày sinh</b><br />
            <input name="ngaysinh" type="datetime-local" /><br /><br />
        </div>
        <br />
        <div class="form-group">
            <b>Phái</b><br />
            <input name="phai" type="radio" value="true" checked/>Nam
            <input name="phai" type="radio" value="false" />Nữ
        </div>
        <br />
        <div class="form-group">
            <b>Địa chỉ</b><br />
            <input name="diachi" type="text" value="@n.diachi" maxlength="50" /><br />
        </div>
        <div class="form-group">
            <b>Password</b><br />
            <input name="password" type="text" value="@n.password" maxlength="50" /><br />
        </div>
        <br />
        <br />
        <div class="form-group">
            <input type="submit" value="Lưu" />
        </div>
        <br />
        <div>
            <a href="@Url.Action("IndexNV")">Quay lại</a>
        </div>
    </div>
</form>

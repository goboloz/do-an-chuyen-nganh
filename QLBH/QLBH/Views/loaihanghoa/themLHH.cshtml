@{
    Layout = null;
}
<form action="themLHH" method="post">
    <div class="form-horizontal">
        <h2>Thêm loại hàng hóa</h2>
        <div class="form-group">
            @*name trùng với tên field được binding*@
            <b>Mã loại hàng hóa</b><br />
            <input name="maloai" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <b>Tên loại hàng hóa</b><br />
            <input name="tenloai" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" /><br /><br />
        </div>
        <div>
            <a href="@Url.Action("IndexLHH")">Quay lại</a>
        </div>
    </div>
</form>